<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SearchView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:textColorPrimary">@color/textLight</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="closeIcon">@drawable/ic_close_white_24dp</item>
    </style>
</resources>
